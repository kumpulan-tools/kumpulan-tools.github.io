---
import Adsense from "../sisipan/adsense.astro";
import Head from "../sisipan/head.astro";

let aplikasi = [
  {
    nama: "Belajar Excel",
    slug: "belajar-excel",
  },
  {
    nama: "Penilaian Hadits",
    slug: "penilaian-hadits",
  },
  {
    nama: "Notes",
    slug: "notes",
  },
  // {
  //   nama: "Andro Docs",
  //   slug: "andro",
  // },
];
---

<html lang="en">
  <head>
    <Head />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>Kumpulan Tools</title>
  </head>
  <body>
    <div class="hero min-h-[50vh] bg-base-200">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Kumpulan Tools</h1>
          <p class="py-6">
            Tools-tools bermanfaat nantinya akan banyak kamu temukan di sini.
            Terutama, kalau kamu menginstalnya dari Webstore.
          </p>
        </div>
      </div>
    </div>
    <div class="p-7">
      <h2 class="text-3xl font-bold">Aplikasi yang Kubuat</h2>
      <div class="grid mt-6 grid-cols-4 gap-4">
        {
          aplikasi
            .sort((a, b) => (a.nama > b.nama ? 1 : -1))
            .map((x) => (
              <a class="btn normal-case" href={`/aplikasi/${x.slug}`}>
                {x.nama}
              </a>
            ))
        }
      </div>
    </div>
  </body>
</html>
